{
  "name": "testang",
  "version": "1.0.0",
  "description": "la descripción de su aplicación",
  "author": "xyz <xyz@gmail.com>",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "pack": "build --dir",
    "dist": "build",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "start:electron": "ng build --base-href ./ && electron .",
    "release:win": "electron-builder --win --x64",
    "release:mac": "electron-builder --mac"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josepfdc/electronappfdc.git"
  },
  "build": {
    "appId": "com.app.appelectron",
    "productName": "Appelectron",
    "copyright": "Copyright © 2022 ${author}",
    "dmg":{
      "contents":[
          {
              "x":130,
              "y":220
          },
          {
              "x":410,
              "y":220,
              "type":"link",
              "path":"/Applications"
          }
      ]
  },
  "win":{
      "target":[
          "nsis",
          "msi"
      ]
  },
  "linux":{
      "target":[
          "deb",
          "rpm",
          "snap",
          "AppImage"
      ],
      "category":"Development"
  },
  "publish": [
    "github"
  ],
  "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./assets/**/*",
      "./server/**/*",

      "*.js",
      "resources/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release/"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.4",
    "@angular/cli": "~14.0.4",
    "@angular/compiler-cli": "^14.0.0",
    "@types/jasmine": "~4.0.0",
    "electron": "^20.0.2",
    "electron-builder": "^23.3.3",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.7.2"
  }
}
